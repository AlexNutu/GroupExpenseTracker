<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <Button
        android:id="@+id/newExpenseBTN"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="New"
        android:textSize="12dp"
        >
    </Button>

    <TextView
        android:layout_width="10dp"
        android:layout_height="35dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@id/existingExpenseBTN"
        android:layout_toEndOf="@id/newExpenseBTN"
        android:gravity="center"
        android:text="|"
        android:textSize="40dp" />

    <Button
        android:id="@+id/existingExpenseBTN"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="12dp"
        android:text="Existing">

    </Button>

    <Spinner
        android:id="@+id/productSpinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/existingExpenseBTN"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/productET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productSpinner"
        android:layout_marginLeft="4dp"
        android:hint="New Product"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/sumET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productET"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:hint="Cost"
        android:textSize="16dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/expensePercentET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sumET"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:hint="Percent"
        android:layout_marginLeft="4dp"
        android:textSize="16dp"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/expensePercentET"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/expenseTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/currencySpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>